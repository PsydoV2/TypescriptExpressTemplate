{
  "name": "express-ts-backend-template",
  "version": "2.0.0",
  "description": "A generic backend template using Express and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=localhost ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 src/templates/**/* dist/",
    "start": "node dist/index.js",
    "start:local": "npm run build && cross-env NODE_ENV=localhost node dist/index.js",
    "start:test": "npm run build && cross-env NODE_ENV=prod node dist/index.js",
    "start:prod": "npm run build && cross-env NODE_ENV=dev node dist/index.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll --detectOpenHandles"
  },
  "author": "Your Name",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "rate-limiter-flexible": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.23",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "20.14.12",
    "@types/nodemailer": "^6.4.17",
    "@types/redis": "^4.0.10",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
